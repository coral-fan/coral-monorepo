{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    /* custom compilerOptions starts here */
    "baseUrl": ".", // this options enables aliases for directories in src (example: import library/hooks/...)
    "paths": {
      "@common/*": ["../common/*/src"] // because base url is now set to be inside the client directory, the paths for @common needs to be redefined
    },
    "typeRoots": ["types"],
    "jsxImportSource": "@emotion/react" /* Enable React component to accept css prop */
  },
  "include": ["next-env.d.ts", "types/*.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
