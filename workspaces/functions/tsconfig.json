{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "esModuleInterop": true,
    /* custom compilerOptions starts here */
    "baseUrl": ".", // this options enables aliases for directories in src (example: import library/hooks/...)
    "paths": {
      "*": ["src/*"],
      "@common/*": ["../common/*/src"]
    }
    /* custom compilerOptions ends here */
  },
  "include": ["src"]
}
